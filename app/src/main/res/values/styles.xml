<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_theme</item>
    </style>



    <style name="loginTextInputBoxes" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/amber</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="hintTextColor">@color/amber</item>
        <item name="boxStrokeErrorColor">@color/error</item>
        <item name="errorIconTint">@color/error</item>
        <item name="errorTextColor">@color/error</item>

        <!--boxStrokeWidth per lo spessore del box-->
    </style>

    <style name="AggiuntaOperaOutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/adding_opera_box_colors</item>
        <item name="hintTextColor">@color/amber</item>
        <item name="counterTextColor">@color/amber_dark</item>
        <item name="android:textColorHint">@color/amber_dark</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="errorTextColor">@color/error</item>
        <item name="errorIconTint">@color/error</item>
        <item name="boxStrokeErrorColor">@color/error</item>
    </style>

    <style name="AggiuntaOperaDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/adding_opera_box_colors</item>
        <item name="hintTextColor">@color/amber</item>
        <item name="android:textColorHint">@color/amber_dark</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="errorTextColor">@color/error</item>
        <item name="errorIconTint">@color/error</item>
        <item name="boxStrokeErrorColor">@color/error</item>
    </style>

</resources>



